<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- bean definitions here -->
    <bean class="in.sp.beans.Address" id="addrId">
      <property name="city" value="pune"/>
       <property name="pinCode" value="411007"/>
    </bean>
    
    <bean class="in.sp.beans.Student" id="stdId">
      <property name="name" value="sham"/>
       <property name="rollNo" value="101"/>
       <property name="email" value="sham1@gmail.com"/>
       <property name="address" ref="addrId"/>
    </bean>

</beans>